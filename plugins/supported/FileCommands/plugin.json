{
    "description": "File management commands",
    "depends": [ "Filesystem", "Matcher", "CommandLine" ],
    "provides":
    [
        {
            "ep": "command",
            "name": "files",
            "params":
            [
                {
                    "name": "path",
                    "type": "text",
                    "description": "list files relative to current file, or start with /projectname"
                }
            ],
            "aliases": [ "ls", "list" ],
            "description": "show files",
            "pointer": "#filesCommand"
        },
        {
            "ep": "command",
            "name": "mkdir",
            "params":
            [
                {
                    "name": "path",
                    "type": "text",
                    "description": "???"
                }
            ],
            "description": "create a new directory, use a leading / to create a directory in a different project",
            "pointer": "file#mkdirCommand"
        },
        {
            "ep": "command",
            "name": "save",
            "params":
            [
                {
                    "name": "filename",
                    "type": "text",
                    "description": "add the filename to save as, or use the current file",
                    "defaultValue": null
                }
            ],
            "description": "save the current contents",
            "key": "ctrl_s",
            "pointer": "#saveCommand"
        },
        {
            "ep": "command",
            "name": "open",
            "params":
            [
                {
                    "name": "path",
                    "type": "existingFile",
                    "description": "the filename to open"
                },
                {
                    "name": "line",
                    "type": "number",
                    "description": "optional line to jump to",
                    "defaultValue": null
                }
            ],
            "aliases": [ "load" ],
            "description": "load up the contents of the file",
            "pointer": "#openCommand"
        },
        {
            "ep": "command",
            "name": "revert",
            "description": "revert the file to the last saved version",
            "pointer": "file#revertCommand"
        },
        {
            "ep": "command",
            "name": "status",
            "description": "get info on the current project and file",
            "pointer": "file#statusCommand"
        },
        {
            "ep": "command",
            "name": "newfile",
            "params":
            [
                {
                    "name": "filename",
                    "type": "text",
                    "description": "optionally, you can specify a full path including project by starting the filename with '/'",
                    "defaultValue": null
                }
            ],
            "description": "create a new buffer for file",
            "withKey": "CTRL SHIFT N",
            "pointer": "file#newfileCommand"
        },
        {
            "ep": "command",
            "name": "rm",
            "params":
            [
                {
                    "name": "path",
                    "type": "text",
                    "description": "add the filename to remove, give a full path starting with '/' to delete from a different project. To delete a directory end the path in a '/'"
                }
            ],
            "aliases": [ "remove", "del" ],
            "description": "remove the file",
            "pointer": "#rmCommand"
        },
        {
            "ep": "command",
            "name": "clear",
            "description": "clear the file",
            "pointer": "file#clearCommand"
        },
        {
            "ep": "command",
            "name": "quota",
            "description": "show your quota info",
            "pointer": "file#quotaCommand"
        },
        {
            "ep": "command",
            "name": "rescan",
            "params":
            [
                {
                    "name": "project",
                    "type": "text",
                    "description": "???"
                }
            ],
            "description": "update the project catalog of files used by quick open",
            "pointer": "file#rescanCommand"
        },
        {
            "ep": "command",
            "name": "timemachine",
            "params":
            [
                {
                    "name": "revision",
                    "type": "text",
                    "description": "No-arguments: display list of older versions, add revision to compare with a specific version",
                    "defaultValue": null
                }
            ],
            "description": "look at older versions of the current file",
            "pointer": "file#Command"
        },
        {
            "ep": "canon",
            "name": "project",
            "description": "Various commands to manage projects"
        },
        {
            "ep": "command",
            "parent": "project",
            "name": "show",
            "description": "show the current project",
            "pointer": "project#showCommand"
        },
        {
            "ep": "command",
            "parent": "project",
            "name": "list",
            "description": "show projects",
            "pointer": "project#listCommand"
        },
        {
            "ep": "command",
            "parent": "project",
            "name": "create",
            "params":
            [
                {
                    "name": "projectname",
                    "type": "text",
                    "description": "???"
                }
            ],
            "description": "create a new project",
            "pointer": "project#createCommand"
        },
        {
            "ep": "command",
            "parent": "project",
            "name": "delete",
            "params":
            [
                {
                    "name": "projectname",
                    "type": "text",
                    "description": "???"
                }
            ],
            "description": "delete a project",
            "pointer": "project#deleteCommand"
        },
        {
            "ep": "command",
            "parent": "project",
            "name": "rename",
            "params":
            [
                {
                    "name": "currentProject",
                    "type": "text",
                    "description": "???"
                },
                {
                    "name": "newProject",
                    "type": "text",
                    "description": "???"
                }
            ],
            "description": "rename a project",
            "pointer": "project#renameCommand"
        },
        {
            "ep": "command",
            "parent": "project",
            "name": "export",
            "params":
            [
                {
                    "name": "project",
                    "type": "text",
                    "description": "project name"
                },
                {
                    "name": "archivetype",
                    "type": "text",
                    "description": "archivetype (zip | tgz, defaults to zip)",
                    "defaultValue": "zip"
                }
            ],
            "description": "export the given project with an archivetype of zip or tgz<br><code>project export myproject</code>",
            "pointer": "project#Command"
        },
        {
            "ep": "command",
            "parent": "project",
            "name": "import",
            "params":
                [
                    {
                        "name": "url",
                        "type": "text",
                        "description": "A URL of a .zip or .tar.gz file to upload from into a new project called by the file name."
                    },
                    {
                        "name": "project",
                        "type": "text",
                        "description": "Project into which to upload the files",
                        "defaultValue": null
                    }
                ],
            "description": "import a zip or archive file from a URL",
            "pointer": "project#importCommand"
        },
        {
            "ep": "typehint",
            "name": "existingFile",
            "description": "A method of selecting an existing file",
            "pointer": "views/types#existingFileHint"
        }
    ]
}
