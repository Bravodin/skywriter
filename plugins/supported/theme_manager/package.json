{
    "description": "Handles colors in Bespin",
    "dependencies": {
        "less": "0.0.0",
        "settings": "0.0.0",
        "events": "0.0.0"
    },
    "provides":
    [
        {
            "ep": "extensionpoint",
            "name": "themestyles"
        },
        {
            "ep": "extensionhandler",
            "name": "themestyles",
            "register": "themestyles#registerThemeStyles",
            "unregister": "themestyles#unregisterThemeStyles"
        },
        {
            "ep": "extensionpoint",
            "name": "themeChange",
            "description": "A themeChange is a way to be notified of changes to a theme"
        },
        {
            "ep": "extensionpoint",
            "name": "theme",
            "indexOn": "name"
        },
        {
            "ep": "extensionhandler",
            "name": "theme",
            "register": "index#registerTheme",
            "unregister": "index#unregisterTheme"
        },
        {
            "ep": "setting",
            "name": "theme",
            "description": "The theme to use",
            "type": "text",
            "defaultValue": "default"
        }
    ]
}

