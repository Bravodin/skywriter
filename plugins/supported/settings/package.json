{
    "description": "Infrastructure and commands for managing user preferences",
    "dependencies": {
        "types": "0.0"
    },
    "provides":
    [
        {
            "ep": "appcomponent",
            "description": "Storage for the customizable Bespin settings",
            "name": "settings",
            "pointer": "index#settings"
        },
        {
            "ep": "extensionpoint",
            "description": "A Choice is something that the application offers as a way to customize how it works",
            "name": "setting",
            "register": "memory#addSetting",
            "indexOn": "name"
        },
        {
            "ep": "command",
            "name": "set",
            "params":
            [
                {
                    "name": "setting",
                    "type":
                    {
                        "name": "selection",
                        "pointer": "settings:memory#getSettings"
                    },
                    "description": "The name of the setting to display or alter",
                    "defaultValue": null
                },
                {
                    "name": "value",
                    "type":
                    {
                        "name": "deferred",
                        "pointer": "settings:memory#getTypeSpecFromAssignment"
                    },
                    "description": "The new value for the chosen setting",
                    "defaultValue": null
                }
            ],
            "description": "define and show settings",
            "pointer": "commands#setCommand"
        },
        {
            "ep": "command",
            "name": "unset",
            "params":
            [
                {
                    "name": "setting",
                    "type":
                    {
                        "name": "selection",
                        "pointer": "settings:memory#getSettings"
                    },
                    "description": "The name of the setting to return to defaults"
                }
            ],
            "description": "unset a setting entirely",
            "pointer": "commands#unsetCommand"
        }
    ]
}
